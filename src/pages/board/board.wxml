<scroll-view class="container" scroll-y="true">
  <view class="swiper">
    <swiper indicator-dots="true" autoplay="{{true}}">
      <block wx:for="{{boards[0].movies}}" wx:key="{{item.id}}">
        <swiper-item>
          <image src="{{item.images.large}}" class="slide-image" mode="aspectFill" />
        </swiper-item>
      </block>
    </swiper>
  </view>
  <view class="board">
  	<view class="board-item">
  		<view class="title">
  			<text>正在上映的电影</text>
  		</view>
  		<scroll-view class="content" scroll-x="true">
  			<view class="movie-item" wx:for="333">
  				<image src="https://img3.doubanio.com/view/movie_poster_cover/lpst/public/p2448419180.webp" mode="aspectFill"/>
  				<text>八月</text>
  			</view>
  		</scroll-view>
  	</view>
  </view>
</scroll-view>
